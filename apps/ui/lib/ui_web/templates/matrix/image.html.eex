<div>
    <table border="1" style="width:<%=@table_width %>px;height:<%= @table_height%>px">
        <%= for i <- 0..@rows - 1 do %>    
        <tr>
            <%= for j <- 0..@cols - 1 do %>
                <td style="padding: 0 0;" <%= if has_coords(@coords, %{y: i, x: j}), do: "bgcolor=red"%>></td>
            <% end %>
        </tr>
        <% end %>
    </table>
</div>
